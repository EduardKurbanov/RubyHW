<h1>Order #<%= @order.id %></h1>

<table class='table'>
  <tr>
    <th>#</th>
    <th>Image</th>
    <th>Name</th>
    <th>Quantity</th>
    <th>Status</th>
    <th>Price</th>
  </tr>
  <% @order.cart.line_items.each_with_index do |line_item, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= image_tag image_url(line_item.product.image), height: 100, width: 100 %> </td>
      <td><%= line_item.product.name %></td>
      <td><%= line_item.quantity %></td>
      <td><%= @order.status %></td>
      <td><%= line_item.product.price %></td>
  </tr>
  
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td><b>total pticy: <%= line_item.price %><b></td>
  </tr>
  <% end %>
</table>