
<% @products.each do |products|%>
  <div class="col mt-3">
    <div class="card" style="width: 18rem;">
      <%= image_tag(products.image) %>
      <div class="card-body">
        <%= link_to products.name, products%>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">pricy <%= number_to_currency(products.price)%></li>
        <li class="list-group-item"><%= button_to "add to cart", line_items_path(product_id: products.id), class: "btn btn-primary"%></li>
      </ul>
    </div>
  </div>
<%end%>

