<h1>New Order</h1>
<%= form_with model: @order, local: true  do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true, autofocus: true %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email, required: true, minlength: 2, autofocus: true %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address, required: true, minlength: 2, autofocus: true %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>